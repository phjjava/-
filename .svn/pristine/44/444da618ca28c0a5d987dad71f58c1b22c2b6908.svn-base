<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<jsp:include page="../common/basecss.jsp"></jsp:include>
<article class="page-container">
	<form class="form form-horizontal" id="album_add">
	  <input type="hidden" id="albumid" name="albumid" value="${useralbum.albumid}"/>
	  <input type="hidden" id="userid" name="userid" value="${userid}"/>
	  <input type="hidden" id="type" name="type" value="${type}"/>
		<div class="row cl">
			<c:if test="${type == 0}">
				<label class="form-label col-xs-4 col-sm-2">相册标题：</label>
			</c:if>
			<c:if test="${type == 1}">
				<label class="form-label col-xs-4 col-sm-2">作品标题：</label>
			</c:if>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" value="${useralbum.albumname}" id="albumname" name="albumname">
			</div>
		</div>
		<div class="row cl">
		   <c:if test="${type == 0}">
				<label class="form-label col-xs-4 col-sm-2">相册简介：</label>
			</c:if>
			<c:if test="${type == 1}">
				<label class="form-label col-xs-4 col-sm-2">作品简介：</label>
			</c:if>
			<div class="formControls col-xs-8 col-sm-9">
				<textarea style="width:100%;height:80px; border:1px solid #dddddd" name="remark">${useralbum.remark}</textarea>
			</div>
		</div>
		<div class="row cl">
			<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
				<button onClick="save();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存</button>
				<button onClick="window.parent.refpage('${userid}','${returnTable}');layer_close();" class="btn btn-default radius" type="button">&nbsp;&nbsp;关闭&nbsp;&nbsp;</button>
			</div>
		</div>
	</form>
</article>
<jsp:include page="../common/basejs.jsp"></jsp:include>
<script type="text/javascript" src="<%=basePath%>lib/jquery.validation/1.14.0/jquery.validate.js"></script> 
<script type="text/javascript" src="<%=basePath%>lib/jquery.validation/1.14.0/validate-methods.js"></script>
<script type="text/javascript">
function save(){
	if($("#album_add").valid()){
	$.ajax({
		type:'post',
		dataType:'text',
		async: true,
		data:$("#album_add").serialize(),
		url : '<%=basePath%>user/mergeUserAlbum?curSec='+Math.random(),
		success:function(data,status){
			if(status == 'success' && data != null){
				var albumid = $("#albumid").val();
				if(albumid == '' || albumid == null){
					$("#albumid").val(data);
				}
				layer.msg('相册保存成功!', {icon: 6,time:1000});
				var userid = $("#userid").val();
				var type = $("#type").val();
				if(type == 0){
				  window.parent.refpage(userid,'photo');
				}else{
				  window.parent.refpage(userid,'work');
				}
			}else{
				alert("保存失败");
			}
		},
		error:function(e) {
			console.log(e);
		}
	});
   }
}
//表单验证
$(function() {
	$("#album_add").validate({
		rules:{
			albumname:{
				required:true,
			},
		},
		messages: {
			"albumname": {
				required: "请填写标题名称",
			},
        },
		onkeyup:false,
		focusCleanup:true,
		success:"valid",
		submitHandler:function(form){
		}
	}); 
});

</script>
